<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.Views.LoginPage"
             Title="Login">
    <Grid Padding="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left side: Company title and image -->
        <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="MyMauiApp"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <Image Source="dotnet_bot.png"
                   HeightRequest="120"
                   WidthRequest="120"
                   Aspect="AspectFit"
                   Margin="0,30,0,0" />
        </VerticalStackLayout>

        <!-- Right side: Login form -->
        <VerticalStackLayout Grid.Column="1" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">
            <Entry x:Name="UsernameEntry"
                   Placeholder="Username"
                   WidthRequest="250" />
            <Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   IsPassword="True"
                   WidthRequest="250" />
            <Button Text="Login"
                    Clicked="OnLoginClicked"
                    WidthRequest="250" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>